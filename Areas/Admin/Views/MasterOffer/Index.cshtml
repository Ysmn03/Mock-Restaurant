@model IEnumerable<Restuarant.Areas.Admin.ViewModels.MasterOfferModel>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <h1>Data Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>

            <li class="breadcrumb-item active">Offer</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-primary">Create New +</a>
                    </h5>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.MasterOfferTitle)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.MasterOfferBreef)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.MasterOfferDesc)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.MasterOfferImageUrl)
                                </th>
                                <th scope="col">
                                    Operations
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.MasterOfferTitle)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.MasterOfferBreef)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.MasterOfferDesc)
                                    </td>
                                    <td scope="row">
                                        <img style="height:50px" src="~/images/@Url.Content(item.MasterOfferImageUrl)" alt="Image" />
                                        @* @Html.DisplayFor(modelItem => item.MasterOfferImageUrl) *@
                                    </td>
                                    <td scope="row">
                                        <a asp-action="Edit" asp-route-id="@item.MasterOfferId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>
                                        <a data-bs-toggle="modal" data-bs-target="#deleteModal" class="csBtnDelete" href=""
                                           data-path="@Url.ActionLink("Index", "MasterOffer", new { idDelete = item.MasterOfferId })">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>
                                        @if (item.IsActive == true)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterOfferId">
                                                <i class="ri-eye-fill text-success h5"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterOfferId">
                                                <i class="ri-eye-close-fill text-danger h5"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnCancel" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        var dataPath = "";
        $(".csBtnDelete").click(function () {
            dataPath = $(this).data("path");

        });
        $("#btnConfirmDelete").click(function () {
            window.location = dataPath;
            dataPath = "";

        });

        $("#btnCancel").click(function () {
            dataPath = "";
        });

    })


</script>
